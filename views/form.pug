extends layout

block content
  h1= "New Message"
  main
    a(href="/")= "Cancel"
    section.form 
      form(method="POST" action="/new")
        textarea(type="text" placeholder="Your message here" name="message" id="message")
        input(name="text" placeholder="Username" )
        button(type="submit" id="submit-btn")= "Post"

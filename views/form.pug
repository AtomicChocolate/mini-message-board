extends layout

block content
  h1= "New Message"
  main
    a(href="/")= "Cancel"
    section.form 
      form(method="POST" action="/new")
        textarea(type="text" name="text" placeholder="Your message here" id="message")
        input(name="user" placeholder="Username")
        button(type="submit" id="submit-btn")= "Post"
